@model StudentUpdateViewModel
@{
    ViewData["Title"] = "Update Student";
}
<h1>@ViewData["Title"]</h1>
@using (Html.BeginForm("Index", "StudentUpdate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
     <div class="form-group">
        @Html.LabelFor(m=>m.Id)
        @Html.TextBoxFor(m=>m.Id,new {@type="number",@class="form-control",@placeholder="Id"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.StudentName)
        @Html.TextBoxFor(m=>m.StudentName,new {@type="text",@class="form-control",@placeholder="Name"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.StudentSurname)
        @Html.TextBoxFor(m=>m.StudentSurname,new {@type="text",@class="form-control",@placeholder="Surname"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.StudentClass)
        @Html.TextBoxFor(m=>m.StudentClass,new {@type="text",@class="form-control",@placeholder="class"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.LessonId)
        @Html.TextBoxFor(m=>m.LessonId,new {@type="number",@class="form-control",@placeholder="LessonId"})
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
}
